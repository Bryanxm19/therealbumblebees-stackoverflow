<h1>Edit Question:</h1>

<%= erb :_errors %>

<form method="POST", action="/questions/<%= @question.id %>">
  <input type="hidden" name="_method" value="PUT">
  <label for="title">Title:</label>
  <input type="text" size="<%= @question.title.length %>"name="question[title]" value="<%= @question.title %>"><br><br>
  <label for="body">Body:</label>
  <input type="text" name="question[body]" value="<%= @question.body %>"><br>
  <input type="submit" value="Submit Changes">
</form>
