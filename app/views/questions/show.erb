<div class="question-answer-container">

  <!-- Show question -->
  <div class="question">
    <h1><%= @question.title %></h1>
    <p><%= @question.body %></p>
    <p>asked <%= @question.time_ago_in_words(@question.created_at)%></p>
    <p><a href="/users/<%=@question.user.id%>"><%= @question.user.username %></a></p>
    <br>
    <% if current_user.id == @question.user_id %>
    <form action = "/questions/<%= @question.id %>/edit" method = "get">
    <input type="submit" value="Edit Question">
    </form>
    <form action = "/questions/<%= @question.id %>" method = "post">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete Question">
    </form>
    <% end %>
  </div>

  <!-- Show answers -->
  <div class="answer">
    <h2><%= @question.num_answers %> Answer<%= puts "s" if @question.num_answers > 1 %></h2>
    <% if @question.answers %>
      <% @question.answers.each do |answer| %>
        <table>
          <tr>
            <td>
              <form method="post" action="/questions/<%= @question.id %>/answers/<%= answer.id %>/vote" class="inline" question="<%= @question.id %>" answer="<%= answer.id %>">
                <button type="submit" name="up" value="submit_value" class="fa fa-chevron-up vote-button up-down-vote-button up-button"></button>
                <br>
                <text class="up-down-vote-button"><%= answer.vote_count %></text>
                <br>
                <button type="submit" name="down" value="submit_value" class="fa fa-chevron-down vote-button up-down-vote-button down-button"></button>
              </form>
            </td>
            <td>
              <%= answer.text %><br><br>
              <p class="answer user and time">answered <%= answer.time_ago_in_words(answer.created_at) %> by <a href="/users/<%=answer.user.id%>"><%= answer.user.username %></a></p>
              <% if current_user.id == answer.user_id %>
              <form action = "/answers/<%= answer.id %>/edit" method = "get">
              <input type="submit" value="Edit Answer">
              </form>
              <form action = "/answers/<%= answer.id %>" method = "post">
              <input type="hidden" name="_method" value="DELETE">
              <input type="submit" value="Delete Answer">
              </form>
              <% end %>
            </td>
          </tr>
        </table>
      <% end %>
    <% end %>


    <!-- Submit new answer -->
    <%= erb :_errors %>
    <form method="POST" action="/questions/<%= @question.id %>/answers/new">
      <input type = "hidden" name = "answer[user_id]" value = "<%= current_user.id if logged_in? %>">
      <input type = "hidden" name = "answer[question_id]" value = "<%= @question.id %>">
      <textarea rows = '4' cols = '50' name="answer[text]" placeholder = 'Write your answer here'></textarea>
      <br>
      <input type = "submit" value = "Submit Answer">
    </form>

  </div>

</div>
